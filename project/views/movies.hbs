<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
 
    <title>movies</title>
    <link rel="stylesheet" href="style.css"/>


    <style>
      h1{
        text-decoration: underline;
      }
    </style>


  </head>
  <body>
    <div style="margin: 20px; text-align:center;">
        <h1>CHANDU Multiplex</h1>
    </div>
        <div class="container" style="display: flex; align-items:center; justify-content:center;">
               <div style="border: dotted;"> 
                 <label style="background-color: yellowgreen;">Select Movies:</label>
                 <select class="form-control" id="movie">
                      {{!-- {{#each movies}} --}}
                      <option value="150">RRR/Screen1 -Rs 150</option>
                      <option value="100">Svkp/Screen2 -Rs 100</option>
                      <option value="80">awe/Screen3-Rs 80</option>
                      {{!-- {{/each}}   --}}
                </select>
                 
         </div>

                <ul class="showcase" style="list-style-type: none; margin: 50px; margin-top: 100px; display:flex;">
                        <li style="text-align: center;">
                                <div class="seat" style="margin: 15px;"></div>
                                <small>Available</small>
                        </li>
                        
                         <li style="text-align: center;">
                                <div class="seat selected" style="margin: 15px;"></div>
                                <small>Selected</small>
                        </li>

                         <li style="text-align: center;">
                                <div class="seat occupied" style="margin: 15px;"></div>
                                <small>Occupied</small>
                        </li>
                </ul>
                     <div style="width: 350px;">
                      <div class="screen"></div>
                      <div class="row" id="screen1" >
                         {{!-- {{#each screen1}}  --}}
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        
                        
                         {{!-- {{/each}}  --}}
                      </div>
                      <div class="row" id="screen2" >
                        {{!-- {{#each screen2}} --}}
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                       
                        
                        {{!-- {{/each}} --}}
                      </div>
                      <div class="row" id="screen3">
                        {{!-- {{#each screen3}} --}}
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        <div class="seat" id=""></div>
                        
                         
                        {{!-- {{/each}} --}}
                      </div>
                     </div>
                  


        </div>
        <div id="finalCost" style="display: none; visibility:hidden; text-align:center; color:rgb(95, 10, 126); margin: 50px;">
          <p id="cost"></p>
        </div>

     <script src="script.js"></script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
